<section class="about-us py-md-5 px-md-0 px-3">
    <div class="overlay"></div>
    <div class="container rounded border border-1 border-theme mb-md-0 mb-5">
        <div class="row">
            <hr class="border-theme rounded-top mb-0" />
            <div class="col-xl-6 col-lg-6 order-lg-1 col-md-12 order-2 pb-md-5 pt-lg-5 py-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="about-us-inner ms-xl-5 ms-md-3 mx-1">
                            <div class="box-inner">
                                <h1 class="text-center text-lg-start mb-4 mb-md-5"><span>We Are Fluent In Hair</span></h1>
                                @Html.Raw(string.Format("{0}", ViewBag.HomeAboutUs))
                                <div class="text-center text-lg-start">
                                    <a class="btn btn-default btn-more btn-border btn-border-black" href="/about-us.html">VIEW MORE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="ms-xl-5 ms-md-3 mx-1 mt-3">
                            <div class="slider-about-us">
                                <img src="~/Content/images/gallery/images-0002.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0004.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0007.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0008.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0009.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0012.jpg" class="img-fluid img-thumbnail p-0" />
                                <img src="~/Content/images/gallery/images-0016.jpg" class="img-fluid img-thumbnail p-0" />
                            </div>
                            <div class="text-center text-lg-start mt-3">
                                <a class="btn btn-default btn-more btn-border btn-border-black" href="/gallery.html">VIEW GALLERY</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 order-lg-2 col-md-12 order-1 pt-md-5 pb-lg-5 py-3">
                <div class="box-image">
                    <img src="~/Content/images/home/home_about_us.jpg" class="img-fluid img-thumbnail p-0" />
                </div>
            </div>
        </div>
    </div>
</section>
@{
    ViewBag.Title = "Services";
}
@section css{
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/slick.css" rel="stylesheet">
    <link href="~/Content/css/slick-theme.css" rel="stylesheet">
    <link href="~/Content/css/slider.css" rel="stylesheet">
    <link href="~/Content/css/page-services.css" rel="stylesheet">
}
<main>
    @{Html.RenderPartial("_SliderPageSub");}
    <section class="bg">
        <div class="bg-services">
            <div class="overlay"></div>
            <div class="page-main container-lg py-5">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('MANICURE', 1, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_manicure.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>MANICURE</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('PEDICURE', 2, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_pedicure.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>PEDICURE</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('DIP POWDER', 3, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_dip_powder_nails.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>DIP POWDER</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('ADD-ON', 4, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_additional_services.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>ADD-ON</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('WAXING', 5, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_waxing.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>WAXING</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('EYELASHES', 5, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_eyelash_extension.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>EYELASHES</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner" onclick="OpenDetailService('FACIALS', 5, this)">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_gel_polish.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>FACIALS</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section modal{
    <div class="modal fade" id="ModalServiceDetail" tabindex="-1" aria-labelledby="ModalServiceDetailLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4 modal-body-image"></div>
                        <div class="col-md-8 modal-body-content"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script src="~/Content/js/slick.min.js"></script>
    <script src="~/Content/js/slick-animation.js"></script>
    <script type="text/javascript">
        ActiveMenu("menu-services");

        var sliderInit = $('.sliders');

        $(document).ready(function () {
            sliderInit.slick({
                dots: false,
                infinite: true,
                slidesToShow: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 4000,
                fade: true,
                draggable: false,
                pauseOnFocus: false,
                pauseOnHover: false,
                touchMove: false
            });
            sliderInit.slickAnimation();

            sliderInit.on('touchstart', e => {
                sliderInit.slick('slickPlay');
            });
        });

        function ServiceDetail(name) {
            location.href = "/services/" + name + ".html";
        }

        function OpenDetailService(title, type, obj) {
            $(".modal-body-image", "#ModalServiceDetail").html("");
            $(".modal-body-content", "#ModalServiceDetail").html("");
            $(".modal-body-image", "#ModalServiceDetail").append("<img class='img-fluid img-thumbnail' alt='" + title + "' src='" + $(obj).find("img").attr("src") + "' />");
            $(".modal-body-content", "#ModalServiceDetail").append("<h2>" + title + "</h2>");
            var strHTML = "";
            switch (type) {
                case 1:
                    strHTML += "<ul>";
                    strHTML += "<li>Classic Manicure</li>";
                    strHTML += "<li>Deluxe Manicure</li>";
                    strHTML += "<li>Gel Manicure</li>";
                    strHTML += "<li>Ultimate Manicure</li>";
                    strHTML += "<li>Take Off Gel</li>";
                    strHTML += "<li>Gel Nail Polish</li>";
                    strHTML += "</ul>";
                    break;
                case 2:
                    strHTML += "<ul>";
                    strHTML += "<li>Classic Pedicure</li>";
                    strHTML += "<li>Hot Wax Pedicure</li>";
                    strHTML += "<li>Gel Pedicure</li>";
                    strHTML += "<li>Deluxe Pedicure</li>";
                    strHTML += "<li>Ultimate Pedicure</li>";
                    strHTML += "<li>Moonwalk Pedicure</li>";
                    strHTML += "<li>Gel Toe Polish</li>";
                    strHTML += "</ul>";
                    break;
                case 3:
                    strHTML += "<ul>";
                    strHTML += "<li>Dip Powder</li>";
                    strHTML += "<li>Dip Manicure</li>";
                    strHTML += "<li>Dip Gel</li>";
                    strHTML += "<li>Dip w/ Tips</li>";
                    strHTML += "<li>Hard Gel</li>";
                    strHTML += "</ul>";
                    break;
                case 4:
                    strHTML += "<h4>Full Set</h4>";
                    strHTML += "<ul>";
                    strHTML += "<li>Regular Nails</li>";
                    strHTML += "<li>Gel Nail Set</li>";
                    strHTML += "<li>Solar Ombré</li>";
                    strHTML += "<li>Solar Pink & White</li>";
                    strHTML += "</ul>";
                    strHTML += "<h4>Refill</h4>";
                    strHTML += "<ul>";
                    strHTML += "<li>Regular Nails</li>";
                    strHTML += "<li>Gel Nail Set</li>";
                    strHTML += "<li>Solar Ombré</li>";
                    strHTML += "<li>Solar Pink & White</li>";
                    strHTML += "<li>Current Shape w/ Full Set</li>";
                    strHTML += "<li>Current Shape w/ French Tip</li>";
                    strHTML += "<li>Tip Removal</li>";
                    strHTML += "<li>Nail Repair</li>";
                    strHTML += "<li>Nail Design</li>";
                    strHTML += "<li>Nail Polish</li>";
                    strHTML += "<li>Toe Polish</li>";
                    strHTML += "<li>Glitter Take Off</li>";
                    strHTML += "</ul>";
                    break;
                case 5:
                    strHTML += "<ul>";
                    strHTML += "<li>Eyebrows</li>";
                    strHTML += "<li>Threading</li>";
                    strHTML += "<li>Lips</li>";
                    strHTML += "<li>Chin</li>";
                    strHTML += "<li>Below the Chin</li>";
                    strHTML += "</ul>";
                    break;
                default:
                    break;
            }
            $(".modal-body-content", "#ModalServiceDetail").append(strHTML);
            $("#ModalServiceDetail").modal("show");
        }
    </script>
}
@{
    ViewBag.Title = "Services";
}
@section css{
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/slick.css" rel="stylesheet">
    <link href="~/Content/css/slick-theme.css" rel="stylesheet">
    <link href="~/Content/css/slider.css" rel="stylesheet">
    <link href="~/Content/css/page-services.css" rel="stylesheet">
}
<main>
    @{Html.RenderPartial("_SliderPageSub");}
    <section class="bg">
        <div class="bg-services">
            <div class="overlay"></div>
            <div class="page-main container-lg py-5">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_haircare.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>Haircare</h2>
                                <a href="/price-list.html#haircare" class="btn btn-warning btn-theme btn-none-border">Details <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_esthetician.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>Esthetician</h2>
                                <a href="/price-list.html#esthetician" class="btn btn-warning btn-theme btn-none-border">Details <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_nail.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>Nails</h2>
                                <a href="/price-list.html#nail" class="btn btn-warning btn-theme btn-none-border">Details <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_waxing.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>Waxing</h2>
                                <a href="/price-list.html#waxing" class="btn btn-warning btn-theme btn-none-border">Details <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 pt-4">
                        <div class="box-inner">
                            <div class="box-image img-hover-zoom">
                                <img class="img-fluid" alt="" src="~/Content/images/services/services_eyelash_extension.jpg" />
                            </div>
                            <div class="box-text text-center">
                                <h2>Eyelash Extension</h2>
                                <a href="/price-list.html#eyelash-extension" class="btn btn-warning btn-theme btn-none-border">Details <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section scripts{
    <script src="~/Content/js/slick.min.js"></script>
    <script src="~/Content/js/slick-animation.js"></script>
    <script type="text/javascript">
        ActiveMenu("menu-services");

        var sliderInit = $('.sliders');

        $(document).ready(function () {
            sliderInit.slick({
                dots: false,
                infinite: true,
                slidesToShow: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 4000,
                fade: true,
                draggable: false,
                pauseOnFocus: false,
                pauseOnHover: false,
                touchMove: false
            });
            sliderInit.slickAnimation();

            sliderInit.on('touchstart', e => {
                sliderInit.slick('slickPlay');
            });
        });
    </script>
}
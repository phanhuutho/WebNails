@{
    ViewBag.Title = "Services";
}
@section css{
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/slick.css" rel="stylesheet">
    <link href="~/Content/css/slick-theme.css" rel="stylesheet">
    <link href="~/Content/css/slider.css" rel="stylesheet">
    <link href="~/Content/css/page-services.css" rel="stylesheet">
}
<main>
    @{Html.RenderPartial("_SliderPageSub");}
    <section class="container">
        <div class="row justify-content-center my-5">
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_pedicure.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Pedicure</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_manicure.png" />
                </div>
                <div class="box-text text-center">
                    <h2>Manicure</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_eyelash_extension.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Eyelash Extensions</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_waxing.jpg" />
                </div>
                <div class="box-text text-center">
                    <h2>Waxing</h2>
                </div>
            </div>
        </div>
        <div class="text-center divider"></div>
        <div class="row justify-content-center my-5">
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_gel_polish.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Gel Polish</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_nails_enhancements.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Nails Enhancements</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_dip_powder_nails.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Dip Powder Nails</h2>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 pt-4">
                <div class="box-image">
                    <img class="img-fluid" alt="" src="~/Content/images/services/services_additional_services.jpeg" />
                </div>
                <div class="box-text text-center">
                    <h2>Additional Services</h2>
                </div>
            </div>
        </div>
    </section>
</main>

@section scripts{
    <script src="~/Content/js/slick.min.js"></script>
    <script src="~/Content/js/slick-animation.js"></script>
    <script type="text/javascript">
        ActiveMenu("menu-services");

        var sliderInit = $('.sliders');

        $(document).ready(function () {
            sliderInit.slick({
                dots: false,
                infinite: true,
                slidesToShow: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 4000,
                fade: true,
                draggable: false,
                pauseOnFocus: false,
                pauseOnHover: false,
                touchMove: false
            });
            sliderInit.slickAnimation();

            sliderInit.on('touchstart', e => {
                sliderInit.slick('slickPlay');
            });
        });
    </script>
}
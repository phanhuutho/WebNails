<section class="drinks py-3">
    <div class="container-xl">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 order-lg-1 col-md-6 order-md-1 order-2">
                <div class="py-3">
                    <div class="bg-drinks">
                        <div class="overlay"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 col-md-6 order-md-2 order-1">
                <div class="text-center py-3 border border-color-theme">
                    <div class="box-inner">
                        <h2>Complimentary Drinks</h2>
                        <div class="divider mb-3"></div>
                        @Html.Raw(string.Format("{0}", ViewBag.HomeDrinks))
                    </div>
                    @if (!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)))
                    {
                        <div class="text-center">
                            <a class="btn btn-default btn-more btn-border btn-border-black text-uppercase" href="@ViewBag.LinkBookingAppointment" target="_blank">
                                <b>Book Appointment <i class="fa fa-calendar"></i></b>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
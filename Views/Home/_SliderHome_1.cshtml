                        <div class="banner-button" data-animation-in="animate__animated animate__fadeInDown">
                            <a href="@ViewBag.HyperLinkTell" class="btn btn-danger text-white btn-theme btn-none-border">Call Us <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-8">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center">
                        <h1 data-animation-in="animate__animated animate__fadeInDown">EYELASH EXTENSIONS</h1>
                        <div class="banner-button" data-animation-in="animate__animated animate__backInLeft">
                            <a href="@ViewBag.HyperLinkTell" class="btn btn-danger text-white btn-theme btn-none-border">Call Us <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-2">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center">
                        <h1 data-animation-in="animate__animated animate__fadeInDown">Made For You</h1>
                        <p data-animation-in="animate__animated animate__fadeInDown">Famous Treatment For Nails Services</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-3">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center">
                        <h1 data-animation-in="animate__animated animate__fadeInDown">Wellness And Spa</h1>
                        <p data-animation-in="animate__animated animate__fadeInDown">Dedicated to inspiring Life in Balance.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-4">

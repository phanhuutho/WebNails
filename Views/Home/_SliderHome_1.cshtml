<section class="slider-home">
    <div class="sliders">
        <div class="slider-1">
            <div class="box-image">
                <div class="image">
                    <div class="container-xl">
                        <div class="row justify-content-center justify-content-md-start">
                            <div class="col-xl-6 col-lg-6 col-md-6">
                                <div class="box-inner text-center py-lg-5 py-md-3 py-2" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="fs-1">WELCOME TO</h1>
                                    <h2 data-animation-in="animate__animated animate__pulse animate__infinite" class="fs-1"><strong>@(Html.Raw(string.Format("{0}", ViewBag.Name)))</strong></h2>
                                    <a class="btn btn-warning btn-theme btn-more btn-none-border" href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank">
                                        <i class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "fa fa-calendar" : "fa fa-phone")"></i> @(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "BOOK APPOINTMENT" : "CALL US")
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-2">
            <div class="box-image">
                <div class="image">
                    <div class="container-xl">
                        <div class="row justify-content-center justify-content-md-end">
                            <div class="col-xl-4 col-lg-4 col-md-12">
                                <div class="box-inner text-center py-1" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">Made For You</h1>
                                    <p class="fs-6">Famous Treatment For Nails Services</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-3">
            <div class="box-image">
                <div class="image">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-xl-4 col-lg-6 col-md-12">
                                <div class="box-inner text-center py-1" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">Wellness And Spa</h1>
                                    <p class="fs-3">Dedicated to inspiring<br/>Life in Balance.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-4">
            <div class="box-image">
                <div class="image">
                    <div class="container-lg">
                        <div class="row justify-content-center justify-content-md-start">
                            <div class="col-xl-5 col-lg-5 col-md-6">
                                <div class="box-inner text-center py-3" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-2">Desire meets nail ideas</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-5">
            <div class="box-image">
                <div class="image">
                    <div class="container-xl">
                        <div class="row justify-content-center">
                            <div class="col-xl-4 col-lg-4 col-md-12">
                                <div class="box-inner text-center py-3" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">All Services</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
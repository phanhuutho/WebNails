@{ 
    var Banner_Home = (List<Dictionary<string, string>>)ViewBag.Banner_Home;
}
<section class="slider-home">
    <div class="sliders">
        <div class="slider-1">
            <div class="box-image">
                <div class="image d-flex @(Banner_Home[0]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Home[0]["Text_JustifyContent"])">
                            <div class="col-auto col-xl-6">
                                <div class="box-inner text-center py-lg-5 p-md-3 py-2" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="fs-1">WELCOME TO</h1>
                                    <h2 data-animation-in="animate__animated animate__pulse animate__infinite" class="fs-3"><strong>@(Html.Raw(string.Format("{0}", ViewBag.Name)))</strong></h2>
                                    <a class="btn btn-warning btn-theme btn-more btn-none-border" href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank">
                                        <i class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "fa fa-calendar" : "fa fa-phone")"></i> @(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "BOOK APPOINTMENT" : "CALL US")
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-2">
            <div class="box-image">
                <div class="image d-flex @(Banner_Home[1]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Home[1]["Text_JustifyContent"])">
                            <div class="col-auto">
                                <div class="box-inner text-center py-1" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">Bringing Joy<br/>in life with colors</h1>
                                    <p class="fs-4">Modern touch, Beautiful feel</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-3">
            <div class="box-image">
                <div class="image d-flex @(Banner_Home[2]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Home[2]["Text_JustifyContent"])">
                            <div class="col-auto">
                                <div class="box-inner text-center py-1" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">Beauty starts with nail</h1>
                                    <p class="fs-3">Have A Seat And Relax</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-4">
            <div class="box-image">
                <div class="image d-flex @(Banner_Home[3]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Home[3]["Text_JustifyContent"])">
                            <div class="col-auto">
                                <div class="box-inner text-center py-1" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-2">A Trendy Luxury Stroke</h1>
                                    <p class="fs-3">Come. Relax. Enjoy.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-5">
            <div class="box-image">
                <div class="image d-flex @(Banner_Home[4]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Home[4]["Text_JustifyContent"])">
                            <div class="col-auto">
                                <div class="box-inner text-center py-md-3" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="font-Prata fs-1">All Services</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
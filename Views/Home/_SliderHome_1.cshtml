<section class="slider-home">
    <div class="sliders">
        <div class="slider-1">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center" data-animation-in="animate__animated animate__fadeInDown">
                        <h1 data-animation-in="animate__animated animate__fadeInDown">WELCOME TO</h1>
                        <h2 data-animation-in="animate__animated animate__fadeInDown"><strong>@ViewBag.Name</strong></h2>
                        <a class="btn btn-danger text-white btn-theme btn-more btn-none-border" data-animation-in="animate__animated animate__fadeInDown" href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank">
                            <i class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "fa fa-calendar" : "fa fa-phone")"></i> @(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "APPOINTMENT" : "CALL US")
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-6">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center">
                        <h1 data-animation-in="animate__animated animate__fadeInDown">ACRYLIC NAILS</h1>
                        <div class="banner-button" data-animation-in="animate__animated animate__backInLeft">
                            <a href="@ViewBag.HyperLinkTell" class="btn btn-danger text-white btn-theme btn-none-border">Call Us <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-7">
            <div class="box-image">
                <div class="image">
                    <div class="box-inner text-center">

@{
    ViewBag.Title = "Contact";
}
@section css{
    <link href="~/Content/css/page-contact.css" rel="stylesheet">
}
<main class="bg-main">
    <section class="bg">
        <div class="bg-contact">
            <div class="overlay"></div>
            <div class="text-center">
                <h1><span class="description">@ViewBag.Name</span></h1>
            </div>
        </div>
    </section>
    <div class="page-main">
        <section class="py-5 container">
            <div class="row">
                <div class="col-md-6">
                    <div class="box-tel">
                        <a href="@ViewBag.HyperLinkTell" target="_self" class="btn btn-success btn-tel">
                            <span>@ViewBag.TextTell</span>
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-contact">
                        <a href="@ViewBag.LinkGoogleMapAddress" target="_blank" class="btn btn-success btn-contact">
                            <span>@ViewBag.Address</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="box-map my-4">
                        <div class="px-2 py-2">
                            <iframe src="@ViewBag.LinkIFrameGoogleMap" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="gallery">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 my-3">
                        <div class="bg bg-contact-1"></div>
                    </div>
                    <div class="col-md-4 my-3">
                        <div class="bg bg-contact-2"></div>
                    </div>
                    <div class="col-md-4 my-3">
                        <div class="bg bg-contact-3"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

@section scripts{
    <script type="text/javascript">
        ActiveMenu("menu-contact");
    </script>
}
<section class="business-gift py-3 py-xl-5">
    <div class="overlay"></div>
    <div class="container-xl">
        <div class="row">
            <div class="col-12 pb-5">
                <div class="services">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-4 py-3">
                            <div class="box-inner">
                                <p><img src="~/Content/images/icon-1-1.png" alt="" class="img-fluid" /></p>
                                <p>SIGNATURE PEDI & MANI FOR LUXURY SPA EXPERIENCE</p>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 py-3">
                            <div class="box-inner">
                                <p><img src="~/Content/images/icon-2-1.png" alt="" class="img-fluid" /></p>
                                <p>SAFE & HEALTHY NAIL CARE SERVICES</p>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 py-3">
                            <div class="box-inner">
                                <p><img src="~/Content/images/icon-3-1.png" alt="" class="img-fluid" /></p>
                                <p>COMPETITIVE PRICES AND A WIDE RANGE OF SERVICES</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="business">
                    <div class="business-inner py-1 py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-business"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>Business Hour</h2>
                                <div class="divider mb-3"></div>
                                @Html.Raw(string.Format("{0}", ViewBag.BusinessHours))
                                <a class="btn btn-default btn-more btn-border btn-border-black" href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank">
                                    @(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "Book Appointment" : "call us") <i class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "fa fa-calendar" : "fa fa-phone")"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="e-gift">
                    <div class="e-gift-inner py-1 py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-e-gift"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>E-Gift</h2>
                                <div class="divider mb-3"></div>
                                <a class="btn btn-default btn-more btn-border btn-border-black" href="gifts.html">VIEW MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
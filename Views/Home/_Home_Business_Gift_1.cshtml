<section class="business-gift py-3 py-xl-5">
    <div class="container-xl">
        <div class="row">
            <div class="col-md-6">
                <div class="business">
                    <div class="business-inner py-1 py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-business"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>Business Hour</h2>
                                <div class="divider mb-3"></div>
                                @Html.Raw(string.Format("{0}", ViewBag.BusinessHours))
                                <div class="mt-3">
                                    <a class="btn btn-default btn-more btn-border btn-border-black" href="@ViewBag.HyperLinkTell">
                                        Call Us <i class="fa fa-phone"></i>
                                    </a>
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-default btn-more btn-border btn-border-black" href="@ViewBag.LinkBookingAppointment">
                                        Book Appointment <i class="fa fa-calendar"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="e-gift">
                    <div class="e-gift-inner py-1 py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-e-gift"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>E-gift Purchase</h2>
                                <div class="divider mb-3"></div>
                                <a class="btn btn-default btn-more btn-border btn-border-black" href="e-gift.html">VIEW MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="business-gift py-3 py-xl-5">
    <div class="container-xl">
        <div class="row">
            <div class="col-md-6">
                <div class="business rounded border border-1 border-theme">
                    <hr class="border-theme rounded-top mt-0" />
                    <div class="business-inner py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-business rounded"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>Business Hour</h2>
                                <div class="divider mb-3"></div>
                                @Html.Raw(string.Format("{0}", ViewBag.BusinessHours))
                                <div class="outline-button-theme">
                                    <a class="btn btn-default btn-theme btn-none-border btn-border-black text-uppercase" href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank">
                                        <i class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "fa fa-calendar" : "fa fa-phone")"></i> @(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "Book Appointment" : "call us")
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="e-gift rounded border border-1 border-theme">
                    <hr class="border-theme rounded-top mt-0" />
                    <div class="e-gift-inner py-xl-5 my-1">
                        <div class="box-image">
                            <div class="image-e-gift rounded"></div>
                        </div>
                        <div class="box-inner">
                            <div class="text-center">
                                <h2>E-gift Purchase</h2>
                                <div class="divider mb-3"></div>
                                <div class="outline-button-theme">
                                    <a class="btn btn-default btn-theme btn-none-border btn-border-black text-uppercase" href="e-gift.html">VIEW MORE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
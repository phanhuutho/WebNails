@{
    ViewBag.Title = "About Us";
}
@section css{
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/slick.css" rel="stylesheet">
    <link href="~/Content/css/slick-theme.css" rel="stylesheet">
    <link href="~/Content/css/slider.css" rel="stylesheet">
    <link href="~/Content/css/page-about-us.css" rel="stylesheet">
}
<main>
    @{Html.RenderPartial("_SliderPageSub");}
    <section class="bg">
        <div class="bg-about-us">
            <div class="overlay"></div>
            <div class="page-main container-lg py-5" id="about-us">
                <div class="row">
                    <div class="col-lg-12 text-center mb-5"><h1><span class="font-Parisienne">Welcome</span></h1></div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center mt-3">
                        @*@Html.Raw(string.Format("{0}", ViewBag.AboutUs).Replace("%Link-Booking%", ViewBag.LinkBookingAppointment))*@
                        <div class="row">
                            <div class="col-md-6">
                                <div class="box-inner">
                                    <div class="box-image">
                                        <img class="img-fluid" alt="" src="~/Content/images/services/services_little_kids.jpg" />
                                    </div>
                                    <div class="box-text">
                                        <h2 class="text-center">Fantastic Training Courses in Cypress</h2>
                                        <p>At 89 Beauty School, we are proud to offer top quality beauty training courses to the people of Cypress. What's our secret?</p>
                                        <p>We take great pains to simplify subjects and have a reputation for making difficult concepts or tasks much easier.</p>
                                        <p>If you don't believe that, rest assured that many of our clients have seen great progress in their skills and knowledge over a very short period of time of time.</p>
                                        <p>If you would like to learn more about us, you can put a call through on +18324276438</p>
                                        <p>We'd love to hear from you.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="box-inner">
                                    <div class="box-image">
                                        <img class="img-fluid" alt="" src="~/Content/images/services/services_little_kids.jpg" />
                                    </div>
                                    <div class="box-text">
                                        <h2 class="text-center">Join Our Family</h2>
                                        <p>Our team of instructors are highly experienced in the beauty industry, and each have great communication skills and vast experience working with students at many different levels.</p>
                                        <p>We also encourage our staff to engage in development sessions to improve their teaching skills and keep up-to-date with the latest trends.</p>
                                        <p>Our courses are planned around reasonable, achievable goals for our students, which helps to increase the effective rate of learning.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="box-inner">
                                    <div class="box-image">
                                        <img class="img-fluid" alt="" src="~/Content/images/services/services_little_kids.jpg" />
                                    </div>
                                    <div class="box-text">
                                        <h2 class="text-center">Our Facilities</h2>
                                        <p>We know it's easier to be a successful learner when you're equipped with what you need.</p>
                                        <p>This is why we have invested heavily in key equipment to give you the best experience while you train with us.</p>
                                        <p>After you register, a training schedule will be designed for you based on your current ability as well as your strengths and weaknesses.</p>
                                        <p>It does not matter what your learning speed is, our instructors are patient enough to help you along until you are confident with the course material.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="box-inner">
                                    <div class="box-image">
                                        <img class="img-fluid" alt="" src="~/Content/images/services/services_little_kids.jpg" />
                                    </div>
                                    <div class="box-text">
                                        <h2 class="text-center">Our Mission</h2>
                                        <p>89 Beauty School's mission is to provide quality post-secondary education that will prepare students to pass the state licensing exam and gain employment in the Cosmetology, Esthetician, Manicurist, or Eyelash Extension field.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section scripts{
    <script src="~/Content/js/slick.min.js"></script>
    <script src="~/Content/js/slick-animation.js"></script>
    <script type="text/javascript">
        ActiveMenu("menu-about-us");

        var sliderInit = $('.sliders');

        $(document).ready(function () {
            sliderInit.slick({
                dots: false,
                infinite: true,
                slidesToShow: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 4000,
                fade: true,
                draggable: false,
                pauseOnFocus: false,
                pauseOnHover: false,
                touchMove: false
            });
            sliderInit.slickAnimation();

            sliderInit.on('touchstart', e => {
                sliderInit.slick('slickPlay');
            });
        });
    </script>
}
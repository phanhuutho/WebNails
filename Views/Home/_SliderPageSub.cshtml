@{
    var Banner_Page = (List<Dictionary<string, string>>)ViewBag.Banner_Page;
}
<div class="slider-banner">
    <div class="sliders">
        <div class="slider-1">
            <div class="box-slider">
                <div class="image d-flex @(Banner_Page[0]["Text_ItemAlign"])">
                    <div class="container-lg">
                        <div class="row @(Banner_Page[0]["Text_JustifyContent"])">
                            <div class="col-xl-6 col-lg-4 col-md-5">
                                <div class="box-inner text-center py-4" data-animation-in="animate__animated animate__fadeInDown">
                                    <h1 class="fs-1">WELCOME TO</h1>
                                    <h2 data-animation-in="animate__animated animate__pulse animate__infinite" class="fs-2"><strong>@(Html.Raw(string.Format("{0}", ViewBag.Name).Replace("Spa", "Spa<br/>")))</strong></h2>
                                    <div class="banner-button">
                                        <div class="outline-button-theme">
                                            <a href="@ViewBag.HyperLinkTell" class="btn btn-warning btn-theme btn-none-border">Call Us <i class="fa fa-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-2">
            <div class="box-slider">
                <div class="image d-flex @(Banner_Page[1]["Text_ItemAlign"])">
                    <div class="container-lg">
